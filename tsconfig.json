{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "CommonJS",
    "outDir": "./dist",
    "baseUrl": "./src",
    "removeComments": true,
    "incremental": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "src/server.ts", "src/routes/blogs.js"],
  "exclude": ["node_modules"]
}
